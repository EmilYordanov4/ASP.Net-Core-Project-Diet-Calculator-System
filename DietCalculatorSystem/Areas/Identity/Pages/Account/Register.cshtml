@page
@model RegisterModel
@{
	ViewData["Title"] = "Register";
}

<div class="text-center">
	<h1 class="display-4" style="padding-top: 0.5em;">@ViewData["Title"]</h1>
	<div class="text-box" style="margin:auto; width:60%; text-align:left;padding: 10px 10px 10px 10px">
		<div style="padding: 10px 10px 10px 10px">
			<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
				<h4 style="font-size: 26px">Create a new account.</h4>
				<hr />
				<div asp-validation-summary="All" class="text-danger"></div>
				<div class="form-group font-settings">
					<label asp-for="Input.FullName"></label>
					<input asp-for="Input.FullName" class="form-control" />
					<span asp-validation-for="Input.FullName" class="text-danger"></span>
				</div>
				<div class="form-group font-settings">
					<label asp-for="Input.Email"></label>
					<input asp-for="Input.Email" class="form-control" />
					<span asp-validation-for="Input.Email" class="text-danger"></span>
				</div>
				<div class="form-group font-settings">
					<label asp-for="Input.Password"></label>
					<input asp-for="Input.Password" class="form-control" />
					<span asp-validation-for="Input.Password" class="text-danger"></span>
				</div>
				<div class="form-group font-settings">
					<label asp-for="Input.ConfirmPassword"></label>
					<input asp-for="Input.ConfirmPassword" class="form-control" />
					<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
				</div>
				<button type="submit" class="btn-settings font-settings">Register</button>
			</form>
		</div>
	</div>
</div>
@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
