@page
@model IndexModel
@{
	ViewData["Title"] = "Profile";
	ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3 style="text-align:center">@ViewData["Title"]</h3>
<hr />
<partial name="_StatusMessage" model="Model.StatusMessage" />
<div style="margin:auto">
	<form id="profile-form" method="post">
		<div asp-validation-summary="ModelOnly" class="text-danger"></div>
		<div class="form-group font-settings">
			<label asp-for="Input.NewUsername"></label>
			<input asp-for="Input.NewUsername" class="form-control" style="width:50%" />
			<span asp-validation-for="Input.NewUsername" class="text-danger"></span>
		</div>
		<div class="form-group font-settings">
			<label asp-for="Input.PhoneNumber"></label>
			<input asp-for="Input.PhoneNumber" class="form-control" style="width:50%" />
			<span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
		</div>
		<button id="update-profile-button" type="submit" class="btn btn-settings font-settings">Save</button>
	</form>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}