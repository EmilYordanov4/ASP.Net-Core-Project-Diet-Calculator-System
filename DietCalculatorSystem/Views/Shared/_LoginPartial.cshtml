@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
	@if (SignInManager.IsSignedIn(User))
	{
		@if (User.IsInRole("Administrator"))
		{
			<a class="navbar-brand btn-settings" asp-area="Admin" asp-controller="Food" asp-action="Requests">Requests</a>
		}
		<li class="nav-item">
			<a class="navbar-brand btn-settings" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
		</li>
		<li class="nav-item">
			<form class="font-settings" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
				<button type="submit" class="navbar-brand btn-settings">Logout</button>
			</form>
		</li>
	}
	else
	{
		<li class="nav-item">
			<a class="navbar-brand btn-settings" asp-area="Identity" asp-page="/Account/Register">Register</a>
		</li>
		<li class="nav-item">
			<a class="navbar-brand btn-settings" asp-area="Identity" asp-page="/Account/Login">Login</a>
		</li>
	}
</ul>
